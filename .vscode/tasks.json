{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run",
            "type": "shell",
            "windows": {
                "command": "cmd /c build.bat examples\\${input:exampleName} run"
            },
            "linux": {
                "command": "./build.sh ${input:exampleName} run"
            },
            "osx": {
                "command": "./build.sh ${input:exampleName} run"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "exampleName",
            "type": "pickString",
            "description": "Select the example to run",
            "options": [
                "01_clear_screen",
                "02_triangle",
                "03_square",
                "04_stencil_triangles",
                "05_cube",
                "06_rotating_cube",
                "07_two_cubes",
                "08_cube_textured",
                "09_fractal_cube",
            ]
        }
    ]
}
