{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run",
            "type": "shell",
            "windows": {
                "command": "cmd /c build.bat examples\\${input:exampleName} run"
            },
            "linux": {
                "command": "./build.sh ${input:exampleName} run"
            },
            "osx": {
                "command": "./build.sh ${input:exampleName} run"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "exampleName",
            "type": "pickString",
            "description": "Select the example to run",
            "options": [
                "blend",
                "clear_screen",
                "cube",
                "cube_textured",
                "cubemap",
                "fractal_cube",
                "info",
                "obj_model",
                "rotating_cube",
                "square",
                "stencil_triangles",
                "triangle",
                "two_cubes",
            ]
        }
    ]
}
